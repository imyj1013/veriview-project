# VeriView AI 서버 환경 설정
# 이 파일을 .env로 복사하고 실제 값들로 수정하세요

# ===============================
# D-ID API 설정 (권장)
# ===============================

# D-ID API 키 (무료 등급 지원)
# D-ID 웹사이트에서 발급받은 API 키를 입력하세요
D_ID_API_KEY=your_d_id_api_key_here

# D-ID API URL (기본값 사용 권장)
# D_ID_API_URL=https://api.d-id.com

# 기본 아바타 설정
# D_ID_DEFAULT_INTERVIEWER_MALE=https://create-images-results.d-id.com/DefaultPresenters/Noam_front_thumbnail.jpg
# D_ID_DEFAULT_INTERVIEWER_FEMALE=https://create-images-results.d-id.com/DefaultPresenters/Maya_front_thumbnail.jpg

# ===============================
# AIStudios 설정 (폴백용)
# ===============================

# AIStudios API 키 (선택사항 - D-ID 실패시 사용)
# AIStudios 웹사이트에서 발급받은 API 키를 입력하세요
AISTUDIOS_API_KEY=your_aistudios_api_key_here

# 아바타 ID (선택사항)
# AISTUDIOS_DEFAULT_AVATAR_ID=default_avatar_id

# ===============================
# 음성 합성 설정
# ===============================

# 기본 한국어 음성 (Microsoft Azure TTS)
DEFAULT_INTERVIEWER_VOICE_MALE=ko-KR-InJoonNeural
DEFAULT_INTERVIEWER_VOICE_FEMALE=ko-KR-SunHiNeural
DEFAULT_DEBATER_VOICE_MALE=ko-KR-BongJinNeural
DEFAULT_DEBATER_VOICE_FEMALE=ko-KR-JiMinNeural

# ===============================
# 기타 AI 모듈 설정
# ===============================

# OpenAI API 키 (LLM 모듈 사용시)
# OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud API 키 (필요한 경우)
# GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here

# ===============================
# 서버 설정
# ===============================

# 서버 포트
SERVER_PORT=5000

# 디버그 모드
DEBUG=True

# 로그 레벨
LOG_LEVEL=INFO

# ===============================
# 파일 경로 설정
# ===============================

# 영상 저장 디렉토리
VIDEOS_DIR=./videos

# D-ID 캐시 디렉토리
D_ID_CACHE_DIR=./videos/cache

# AIStudios 캐시 디렉토리
AISTUDIOS_CACHE_DIR=./aistudios_cache

# 임시 파일 디렉토리
TEMP_DIR=./temp

# ===============================
# 성능 설정
# ===============================

# 캐시 만료 시간 (초)
CACHE_EXPIRY=604800

# 최대 동시 영상 생성 수
MAX_CONCURRENT_VIDEOS=2

# 영상 생성 타임아웃 (초)
VIDEO_GENERATION_TIMEOUT=300

# D-ID 영상 생성 대기 시간 (초)
D_ID_MAX_WAIT_TIME=300

# ===============================
# 보안 설정
# ===============================

# 허용된 도메인 (CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# API 요청 제한 (분당 요청 수)
RATE_LIMIT_PER_MINUTE=60

# ===============================
# 사용 설정
# ===============================

# 우선 사용할 AI 아바타 서비스 (D_ID 또는 AISTUDIOS)
PREFERRED_AVATAR_SERVICE=D_ID

# 폴백 사용 여부
USE_FALLBACK_SERVICE=True
